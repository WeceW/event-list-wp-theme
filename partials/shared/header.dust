<!doctype html>
<html {WP.LanguageAttributes}>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="profile" href="https://gmpg.org/xfn/11" />
    <title>{WP.name}</title>
    {@wphead /}
</head>

<body class="{#WP.body_class}{.}{@sep} {/sep}{/WP.body_class}">

<div id="page" class="site">

    <header class="gt-header">
        {#Header}
            {#HeaderData}
                <img src="{WP.template_url}{imgurl}" class="gt-header-bgimg" alt="header image" />
            {/HeaderData}
        {/Header}
        <div class="gt-header-title">
            < {WP.name} >
        </div>
    </header>

    {@menu menu_name="main-menu" ul_id="gt-menu" ul_classes="gt-menu" /}

    <div id="content" class="site-content">
